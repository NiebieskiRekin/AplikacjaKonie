{
  "name": "@aplikacja-konie/backend",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./routes": "./src/routes/index.ts",
    "./schema": "./src/db/types.ts"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "npx tsc && concurrently -p \"[{name}]\" -n \"tsc ,node\" -c \"bgBlue.bold,bgGreen.bold\" \"npx tsc --preserveWatchOutput --watch\" \"node --watch --watch-preserve-output dist\"",
    "db:push": "drizzle-kit push --config=./src/db/drizzle.config.ts",
    "db:pull": "drizzle-kit pull --config=./src/db/drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=./src/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --host localhost --port 3002 --verbose --config=./src/db/drizzle.config.ts",
    "typecheck": "tsc --noEmit --preserveWatchOutput"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.15.2",
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.3",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.7.2",
    "image-size": "^2.0.0",
    "node-cron": "^3.0.3",
    "pg": "^8.13.3",
    "winston": "^3.17.0",
    "zod": "^3.24.2",
    "nodemailer": "^6.10.0"
  }
}
